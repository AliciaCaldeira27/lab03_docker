{
  "compilerOptions": {
    // File Layout
    "module": "esnext",    // Correto para ECMAScript modules
    "target": "esnext",    // Definir para o último padrão ECMAScript
    "types": ["node"],     // Adicione o tipo Node.js aqui
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx", // Se for usar React, caso contrário pode descomentar esta linha
    "moduleResolution": "node",  // Resolução de módulos compatível com Node
    "skipLibCheck": true
  }
}
